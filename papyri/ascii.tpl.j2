{% macro render_inner(type, obj) -%}
   |{%- if type == 'Words' -%}
   |   |{{- obj.value -}}
   |{%- elif type == 'Word' -%}
   |   |{{- obj.value -}}
   |{%- elif type == 'Directive' -%}
   |   |:{{blue(obj.domain)}}:{{blue(obj.role)}}:`{{blue(obj.text)}}`
   |{%- elif type == 'Link' %}
   |   |{% if obj.kind=='local' %}
   |   |    {{-green(obj.value)-}}
   |   |{% elif obj.kind=='exists' %}
   |   |    {{-blue(obj.value)-}}
   |   |{% elif obj.kind=='missing' %}
   |   |    {{-unreachable(obj)}}
   |   |{% else %}
   |   |{% endif %}
   |{% elif type == 'Math' %}
   |    ${{obj.text}}$
   |{% elif type == 'Verbatim' %}
   |    {{-yellow(obj.text)-}}
   |{% else %}
   |   |Some A {{type}}
   |{%- endif -%}
{%- endmacro %}

{% macro block_paragraph(pgr) -%}
   |{%- for c in pgr.children -%}
   |    |{{-render_inner(c.__class__.__name__, c)-}}
   |{%- endfor -%}
{% endmacro %}

{% macro block_directive(dve) -%}
{{blue("..")}}{{blue(dve.directive_name)}}{{blue("::")}} {{dve.args0}}
    {% if dve.inner %}
    |{{block_paragraph(dve.inner)}}
    {% endif %}
{% endmacro %}

{% macro render_II(obj) -%}
   |{% if obj.__class__.__name__ == 'Paragraph' %}
   |   |{{block_paragraph(obj)}}
   |{% else %}
   |{%- set type = obj.__class__.__name__ -%}
   |   |{%- if type in ('Word', 'Directive', 'Link', 'Math', 'Verbatim') -%}
   |   |   |{{unreachable()}}
   |   |{% elif type == 'BlockDirective' %}
   |   |   |{{'\n'}}{{block_directive(obj)}}
   |   |{% elif type == 'Verbatim' %}
   |   |   |{{obj}}
   |   |{% elif type == 'Paragraph' %}
   |   |   |{{block_paragraph(obj)}}
   |   |{% elif type == 'BlockVerbatim' %}
   |   |   |{%- for l in obj.lines -%}
   |   |   |   |{{l._line}}{% if not loop.last %}{{-'\n'-}}{% endif %}
   |   |   |{%- endfor -%}
   |   |{% elif type == 'Block' %}
   |   |   |   |   |{{unreachable()}}
   |   |{% elif type == 'DefList' %}
   |   |   |    {% for item in obj.children %}
   |   |   |    {{render_II(item.dt)}}
   |   |   |        {{render_II(item.dd)}}
   |   |   |    {%endfor %}  
   |   |{% elif type == 'DefListItem' %}
   |   |    {{-block(obj)-}}
   |   |{% elif type == 'Example' %}
   |   |   |   |{{block(obj)}}
   |   |{% elif type == 'Section' %}
   |   |   {% for item in obj %}
   |   |       {{ render_II(item) }}
   |   |   {% endfor %}
   |   |{% else %}
   |   |   |Some B {{type}} Not implemented yet
   |   |    {#{{unreachable(obj)}}#}
   |   |{%- endif -%}
   |{%- endif -%}
{%- endmacro %}

